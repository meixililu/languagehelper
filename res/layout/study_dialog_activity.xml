<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" >

        <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
            android:id="@+id/progressBarCircularIndetermininate"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:background="@color/white"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/study_dialog_type"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/study_dialog_listen"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@color/load_blue"
                    android:gravity="center"
                    android:text="@string/practice_dialog_listen"
                    android:textColor="@color/text_dark"
                    materialdesign:rippleSpeed="92" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/study_dialog_read"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@color/load_blue"
                    android:gravity="center"
                    android:text="@string/practice_dialog_readafterme"
                    android:textColor="@color/text_dark"
                    materialdesign:rippleSpeed="92" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/study_dialog_rolea"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@color/load_blue"
                    android:gravity="center"
                    android:text="@string/practice_dialog_rolea"
                    android:textColor="@color/text_dark"
                    materialdesign:rippleSpeed="92" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/study_dialog_roleb"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@color/load_blue"
                    android:gravity="center"
                    android:text="@string/practice_dialog_roleb"
                    android:textColor="@color/text_dark"
                    materialdesign:rippleSpeed="92" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/error_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/webview_reload"
            android:textColor="@color/text_black"
            android:textSize="@dimen/bigger" 
            android:visibility="gone"
            />
    </FrameLayout>

</LinearLayout>