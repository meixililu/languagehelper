                        android:textSize="@dimen/small" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/english_website_layout7"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="@dimen/padding_7"
                android:layout_marginLeft="@dimen/padding_7"
                android:layout_marginRight="@dimen/padding_7"
                android:layout_marginTop="@dimen/padding_7"
                android:background="@color/white"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:shadowColor="@color/text_black"
                        android:shadowDx="0.3"
                        android:shadowDy="0.3"
                        android:shadowRadius="0.3"
                        android:text="@string/website_tobecontinue"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/bigger" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/website_tobecontinue_subtitle"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/small" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>