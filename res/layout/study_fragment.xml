<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/contentbg"
        android:orientation="vertical"
        android:padding="@dimen/padding_7"
        android:weightSum="10" >

        <FrameLayout
            android:id="@+id/study_daily_sentence"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/style5_color5"
            android:foreground="@drawable/framelayout_selector"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/daily_sentence_item_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/daily_sentence_list_item_middle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/none_alpha"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/dailysentence_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginLeft="@dimen/padding_7"
                    android:layout_marginRight="@dimen/padding_7"
                    android:gravity="left|bottom"
                    android:shadowColor="@color/white"
                    android:shadowDx="0.4"
                    android:shadowDy="0.4"
                    android:shadowRadius="0.4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/biggerx" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_margin="@dimen/padding_5"
                android:gravity="left"
                android:text="@string/dailysentence"
                android:textColor="@color/white"
                android:textSize="@dimen/small" />
            <ImageView
                android:id="@+id/play_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_play_circle_outline_white_48dp" 
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/study_spoken_english"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/padding_7"
            android:foreground="@drawable/framelayout_selector"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/style5_color2"
                android:gravity="center"
                android:shadowColor="@color/white"
                android:shadowDx="0.4"
                android:shadowDy="0.4"
                android:shadowRadius="0.4"
                android:text="@string/title_Practice"
                android:textColor="@color/white"
                android:textSize="@dimen/bigger" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/study_dailog"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/padding_7"
            android:foreground="@drawable/framelayout_selector"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/style5_color1"
                android:gravity="center"
                android:shadowColor="@color/white"
                android:shadowDx="0.4"
                android:shadowDy="0.4"
                android:shadowRadius="0.4"
                android:text="@string/simulation_dialogue"
                android:textColor="@color/white"
                android:textSize="@dimen/bigger" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/study_test"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/padding_7"
            android:foreground="@drawable/framelayout_selector"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/style5_color3"
                android:gravity="center"
                android:shadowColor="@color/white"
                android:shadowDx="0.4"
                android:shadowDy="0.4"
                android:shadowRadius="0.4"
                android:text="@string/spokenEnglishTest"
                android:textColor="@color/white"
                android:textSize="@dimen/bigger" />
        </FrameLayout>

        
        <FrameLayout
            android:id="@+id/study_to_all_user"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/padding_7"
            android:foreground="@drawable/framelayout_selector"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/style5_color4"
                android:gravity="center"
                android:shadowColor="@color/white"
                android:shadowDx="0.4"
                android:shadowDy="0.4"
                android:shadowRadius="0.4"
                android:text="@string/fighting"
                android:textColor="@color/white"
                android:textSize="@dimen/bigger" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/study_ad_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_7"
            android:background="@color/none"
            android:orientation="vertical" >
        </LinearLayout>
        
    </LinearLayout>

</ScrollView>