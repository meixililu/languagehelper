<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f1f1f1"
        android:orientation="vertical"
        android:padding="@dimen/padding_7"
        android:weightSum="10" >

        <FrameLayout
            android:id="@+id/study_daily_sentence"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/none_alpha"
            android:foreground="@drawable/framelayout_selector"
            android:orientation="vertical" >

            <com.messi.languagehelper.views.ProportionalImageView
                android:id="@+id/daily_sentence_item_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/daily_sentence_list_item_middle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/none_alpha"
                android:orientation="vertical"
                android:paddingTop="40dp" >

                <TextView
                    android:id="@+id/dailysentence_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginLeft="@dimen/padding_7"
                    android:layout_marginRight="@dimen/padding_7"
                    android:gravity="left|bottom"
                    android:shadowColor="@color/white"
                    android:shadowDx="0.4"
                    android:shadowDy="0.4"
                    android:shadowRadius="0.4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/biggerx" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_margin="@dimen/padding_5"
                android:gravity="left"
                android:text="@string/dailysentence"
                android:textColor="@color/white"
                android:textSize="@dimen/small" />

            <ImageView
                android:id="@+id/play_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_play_circle_outline_white_48dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/symbol_study_cover"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/padding_7"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/title_symbol"
                    android:textColor="@color/text_black1"
                    android:textSize="@dimen/big" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/word_study_cover"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/padding_7"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/title_word_study"
                    android:textColor="@color/text_black1"
                    android:textSize="@dimen/big" />
            </FrameLayout>
        </LinearLayout>
		<!-- #7986CB -->
		<!-- #81C784 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/study_spoken_english"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/padding_7"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/title_Practice"
                    android:textColor="@color/text_black1"
                    android:textSize="@dimen/big" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/study_composition"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/padding_7"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/title_composition"
                    android:textColor="@color/text_black1"
                    android:textSize="@dimen/big" />
            </FrameLayout>
        </LinearLayout>
<!-- @color/style5_color4 -->
<!-- @color/style5_color1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/study_test"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/padding_7"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/spokenEnglishTest"
                    android:textColor="@color/text_black1"
                    android:textSize="@dimen/big" />
            </FrameLayout>

<!--                 android:background="@color/style5_color6" -->
            <FrameLayout
                android:id="@+id/news_layout"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/padding_7"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="@string/reading"
                    android:textColor="@color/text_black1"
                    android:textSize="@dimen/big" />
            </FrameLayout>
        </LinearLayout>

<!--                 android:background="#4db6ac" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/en_examination_layout"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/padding_7"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/examination"
                    android:textColor="@color/text_black1"
                    android:textSize="@dimen/big" />
            </FrameLayout>

<!--                 android:background="#4dd0e1" -->
            <FrameLayout
                android:id="@+id/instagram_layout"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/padding_7"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:foreground="@drawable/framelayout_selector"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="@string/foreign_website"
                    android:textColor="@color/text_black1"
                    android:textSize="@dimen/big" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>