<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/dialog_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
            android:id="@+id/dialog_a_head_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/dialog_a"
            />
        <TextView 
            android:id="@+id/dialog_a_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@id/dialog_a_head_portrait"
	        android:layout_alignRight="@id/dialog_a_head_portrait"
	        />
        <TextView 
            android:id="@+id/dialog_a_content_resutl"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/dialog_a_content"
	        android:layout_alignRight="@id/dialog_a_head_portrait"
	        />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/dialog_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
            android:id="@+id/dialog_b_head_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/dialog_b"
            />
        <TextView 
            android:id="@+id/dialog_b_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@id/dialog_b_head_portrait"
	        android:layout_alignLeft="@id/dialog_b_head_portrait"
	        />
        <TextView 
            android:id="@+id/dialog_b_content_resutl"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/dialog_b_content"
	        android:layout_alignRight="@id/dialog_b_head_portrait"
	        />
    </RelativeLayout>
    

</LinearLayout>
