<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <com.gc.materialdesign.views.ProgressBarCircularIndetermininate
        android:id="@+id/lottery_result_hall_progressbar_m"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="@color/white"
         />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_7"
        android:scaleType="fitCenter"
        />

    <com.gc.materialdesign.views.ButtonFloat
	    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:id="@+id/buttonfloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_margin"
        android:background="@color/load_blue"
        materialdesign:animate="true"
        materialdesign:rippleSpeed="95"
        materialdesign:iconDrawable="@drawable/ic_share_white_36dp"
         />
</RelativeLayout>