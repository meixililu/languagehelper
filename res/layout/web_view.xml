<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/contentbg"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
	    <android.support.v4.widget.SwipeRefreshLayout
	        android:id="@+id/swipe_container"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
	
	        <com.messi.languagehelper.observablescrollview.ObservableWebView
	            android:id="@+id/refreshable_webview"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent" />
	    </android.support.v4.widget.SwipeRefreshLayout>
        
	    <com.gc.materialdesign.views.ProgressBarDetermininate
                android:id="@+id/progressdeterminate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                materialdesign:max="100"
                android:background="@color/green" />
	    
        <TextView 
            android:id="@+id/tap_to_reload"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/webview_reload"
            android:background="@color/white"
            android:textColor="@color/text_grey"
            android:gravity="center"
            android:textSize="@dimen/bigger"
            android:visibility="gone"
            />
    </FrameLayout>


</LinearLayout>